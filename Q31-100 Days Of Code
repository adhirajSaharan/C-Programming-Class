//Q31: Write a program to take a number as input and print its equivalent binary representation.

/*
Sample Test Cases:
Input 1:
10
Output 1:
1010

Input 2:
7
Output 2:
111

*/
#include <stdio.h>

int main() {
    unsigned long long n;  // 64-bit unsigned integer
    printf("Enter a number: ");
    int res = scanf("%llu", &n);  // Read 64-bit unsigned input

    // Validate input
    if (res != 1) {
        printf("Invalid input!\n");
        return 1;
    }

    // Special case for zero
    if (n == 0) {
        printf("0\n");
        return 0;
    }

    unsigned long long mask = 1ULL << 63;  // Mask for highest bit in 64-bit integer
    int started = 0;

    printf("Binary representation: ");
    
    while (mask > 0) {
        if (n & mask) {
            started = 1;
            printf("1");
        } else if (started) {
            printf("0");
        }
        mask >>= 1;  // Right shift mask to check next bit
    }
    printf("\n");

    return 0;
}
