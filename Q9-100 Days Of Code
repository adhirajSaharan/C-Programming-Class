//Q9: Write a program to calculate simple and compound interest for given principal, rate, and time.

/*
Sample Test Cases:
Input 1:
1000 5 2
Output 1:
Simple Interest=100, Compound Interest=102.5

Input 2:
5000 7 3
Output 2:
Simple Interest=1050, Compound Interest=1125.76

*/

#include <stdio.h> 
#include <math.h>

int main(){

    double principal, rate, time, si_in, c_in;

    scanf("%lf %lf %lf", &principal, &rate, &time);

    //si = (p*r*t)/100
    si_in = (principal*rate*time)/100;

    // ci = p*(1+r/100)^t - p
    double amount = principal*pow((1+rate/100), time);

    c_in = amount - principal;

    printf("Simple Interest=%g, Compound Interest=%g\n", si_in, c_in);

    return 0;

}
